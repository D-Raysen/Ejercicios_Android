<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3B5B5"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="193dp"
        android:text="@string/resultado"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.322"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Numero"
        android:layout_width="215dp"
        android:layout_height="239dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="101dp"
        android:autofillHints="Autocompletado"
        android:backgroundTint="#A3A1A1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/pon_un_numero"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#B71C1C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_resultado" />


    <Button
        android:id="@+id/boton_Calcular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="@string/calcular_cuadrado"
        android:onClick="CalcularCuadrado"
        android:textColor="#D7CCC8"
        app:layout_constraintEnd_toEndOf="@+id/Numero"
        app:layout_constraintStart_toStartOf="@+id/Numero"
        app:layout_constraintTop_toBottomOf="@+id/Numero"
        tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>